<section class="grid grid-cols-2 bg-teal">
    <div class=" mt-16 w-[80%] ">
      <img src="contact.png" />
    </div>
    <!--Email-->
    <section class=" w-[90%]">
      <h1 class="mt-4 text-lg text-center text-tan">
        Get in Touch
      </h1>
      <label for="name" class="text-sm  text-peach">Name</label>
      <input
        type="text"
        id="name"
        name="name"
        class="w-full px-5 py-1 text-sm  text-gray-700 transition-colors duration-200 ease-in-out bg-opacity-50 border rounded outline-none bg-mint border-orchid focus:border-orchid focus:bg-lightTan focus:ring-2 focus:ring-peach"
      />

      <label for="email" class="text-sm  text-peach">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        class="w-full px-3 py-1 text-sm  text-gray-700 transition-colors duration-200 ease-in-out bg-opacity-50 border rounded outline-none bg-mint border-orchid focus:border-orchid focus:bg-lightTan focus:ring-2 focus:ring-peach"
      />

      <label for="message" class="text-sm leading-7 text-peach">Message</label
      >
      <textarea
        id="message"
        name="message"
        class="w-full h-20 px-3 py-1 text-sm text-gray-700 transition-colors duration-200 ease-in-out bg-opacity-50 border rounded outline-none resize-none bg-mint border-orchid focus:border-orchid focus:bg-lightTan focus:ring-2 focus:ring-peach"
      ></textarea>

      <!--Button-->

      <div class="flex justify-center pb-3">
        <a href="#_" class="relative inline-block text-sm group">
          <span
            class="relative z-10 block px-5 py-3 overflow-hidden font-medium leading-tight text-gray-800 transition-colors duration-300 ease-out border-2 border-gray-900 rounded-lg group-hover:text-lightTan"
          >
            <span
              class="absolute inset-0 w-full h-full px-5 py-3 rounded-lg bg-lightTan"
            ></span>
            <span
              class="absolute w-64 h-0 transition-all duration-300 origin-center rotate-45 -translate-x-10 bg-peach top-1/2 group-hover:h-64 group-hover:-translate-y-32 ease"
            ></span>
            <span class="relative">Submit</span>
          </span>
          <span
            class="absolute bottom-0 right-0 w-full h-12 -mb-1 -mr-1 transition-all duration-200 ease-linear bg-gray-900 rounded-lg group-hover:mb-0 group-hover:mr-0"
            data-rounded="rounded-lg"></span>
        </a>
      </div>
    </section>
  </section>